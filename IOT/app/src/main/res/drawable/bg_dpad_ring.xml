<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bóng nhẹ -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#14000000"/>
        </shape>
    </item>
    <!-- Vòng ngoài -->
    <item android:top="3dp" android:bottom="3dp" android:left="3dp" android:right="3dp">
        <shape android:shape="oval">
            <size android:width="0dp" android:height="0dp"/>
            <solid android:color="#F6FBFD"/>
            <stroke android:width="1dp" android:color="@color/control_stroke"/>
        </shape>
    </item>
</layer-list>
