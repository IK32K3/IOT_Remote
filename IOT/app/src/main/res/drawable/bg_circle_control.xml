<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- bóng rất nhẹ -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#1A000000"/>
        </shape>
    </item>
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="oval">
            <solid android:color="@color/control_white"/>
            <stroke android:width="1dp" android:color="@color/control_stroke"/>
            <size android:width="@dimen/btn_circle" android:height="@dimen/btn_circle"/>
        </shape>
    </item>
</layer-list>
