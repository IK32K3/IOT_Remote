<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg_blue">

    <!-- Hàng trên: Power - Timer -->
    <ImageButton
        android:id="@+id/btnPower"
        android:layout_width="@dimen/btn_circle"
        android:layout_height="@dimen/btn_circle"
        android:background="@drawable/bg_circle_control"
        android:src="@drawable/ic_power"
        android:contentDescription="@string/desc_power"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        app:tint="@color/control_icon" />

    <ImageButton
        android:id="@+id/btnTimer"
        android:layout_width="@dimen/btn_circle"
        android:layout_height="@dimen/btn_circle"
        android:background="@drawable/bg_circle_control"
        android:src="@drawable/ic_timer"
        android:contentDescription="@string/desc_timer"
        app:layout_constraintTop_toTopOf="@id/btnPower"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="32dp"
        app:tint="@color/control_icon" />

    <!-- Quạt ở giữa -->
    <FrameLayout
        android:id="@+id/fanContainer"
        android:layout_width="@dimen/fan_size"
        android:layout_height="@dimen/fan_size"
        android:background="@drawable/bg_fan_frame"
        app:layout_constraintTop_toBottomOf="@id/btnPower"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/imgFanBlades"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_fan_blades"
            android:layout_gravity="center"/>
    </FrameLayout>

    <!-- Nút chữ quanh quạt, căn sát nhưng không tràn -->
    <TextView
        android:id="@+id/btnSpeedUp"
        android:layout_width="@dimen/btn_circle"
        android:layout_height="@dimen/btn_circle"
        android:background="@drawable/bg_circle_control"
        android:gravity="center"
        android:padding="8dp"
        android:text="Speed +"
        android:textAllCaps="false"
        android:textColor="@color/control_icon"
        app:layout_constraintCircle="@id/fanContainer"
        app:layout_constraintCircleRadius="180dp"
        app:layout_constraintCircleAngle="225"/>

    <TextView
        android:id="@+id/btnType"
        android:layout_width="@dimen/btn_circle"
        android:layout_height="@dimen/btn_circle"
        android:background="@drawable/bg_circle_control"
        android:gravity="center"
        android:padding="8dp"
        android:text="Type"
        android:textAllCaps="false"
        android:textColor="@color/control_icon"
        app:layout_constraintCircle="@id/fanContainer"
        app:layout_constraintCircleRadius="180dp"
        app:layout_constraintCircleAngle="315"/>

    <TextView
        android:id="@+id/btnSwing"
        android:layout_width="@dimen/btn_circle"
        android:layout_height="@dimen/btn_circle"
        android:background="@drawable/bg_circle_control"
        android:gravity="center"
        android:padding="8dp"
        android:text="Swing"
        android:textAllCaps="false"
        android:textColor="@color/control_icon"
        app:layout_constraintCircle="@id/fanContainer"
        app:layout_constraintCircleRadius="180dp"
        app:layout_constraintCircleAngle="135"/>

    <TextView
        android:id="@+id/btnSpeedDown"
        android:layout_width="@dimen/btn_circle"
        android:layout_height="@dimen/btn_circle"
        android:background="@drawable/bg_circle_control"
        android:gravity="center"
        android:padding="8dp"
        android:text="Speed -"
        android:textAllCaps="false"
        android:textColor="@color/control_icon"
        app:layout_constraintCircle="@id/fanContainer"
        app:layout_constraintCircleRadius="180dp"
        app:layout_constraintCircleAngle="45"/>

</androidx.constraintlayout.widget.ConstraintLayout>
